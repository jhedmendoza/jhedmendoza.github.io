// include all templated CSS properties here such as font sizes, margin, padding, color, background color, etc

// for width
$maxWidth   : 1300px; // can be use as max width of the container
$medWidth   : 1145px; // can be use as medium width of the container
$shortWidth : 970px; // can be use as small width of the container

// for fonts
$defaultFont    : 'Lunchtype', 'Helvetica'; // default font families and error support for any html tags
$fontA          : 'Lunchtype', 'Arial';
$gameloftIcons  : 'Gameloft Icons';
$fontAwesome    : 'FontAwesome';

// for font sizes
$fontSmall  : 12px;
$fontMedium : 14px;
$fontLarge  : 16px;
$fontxLarge : 18px;
$fontxxLarge: 20px;

// for colors
$defaultColor     : #2e2e2e; // default color for the independent paragraphs, input fields, etc
$defaultLinkColor : #00bff3; // default link color for the whole sire
$coWhite          : #ffffff;
$coBlack          : #000000;
$coLightBlue      : #00bff3;
$coBlue           : #0095f3;
$coGray           : #222222;
$coAsh            : #878a8f;
$coDust           : #efefef;
$coRed            : #e82b0d;
$coGreen          : #27ae60;
$coYellow         : #f1c40f;
$coPurple         : #8e44ad;
$lineGray         : #dedede;

// for margin and padding
$spaceOne   : 10px;
$spaceTwo   : 20px;
$spaceThree : 30px;
$spaceFour  : 40px;
$spaceFive  : 50px;

