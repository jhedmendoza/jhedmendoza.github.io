}
@media only screen and (max-width: 480px) {
  .g-i-ma-logo img { width: 60%; }
  .gl-in-main { background-size: 200% auto;  }
  .gi-m-title { padding-bottom: 10px; }
  .co-pa-form { padding: 0; }
  .as-co-filter {
    li.set { width: 49%; margin: 5px 0.5%;
      &:nth-child(2n+1) { margin-left: 0; }
      &:nth-child(2n) { margin-right: 0; }
