  }
  .as-co-list li { width: 50%; margin: 10px 0 !important;
    &:nth-child(2n+1) { padding-right: 10px; }
    &:nth-child(2n) { padding-left: 10px; }
  }
}
@media only screen and (max-width: 400px) {
  .footer-bottom { padding-top: 10px; }
  .fo-to-set { display: block; width: auto !important; margin: 20px 0;
    &:first-child { margin-top: 0; }
    &:last-child { margin-bottom: 0; }
    &.links { text-align: center; }
  }
  .co-pa-list li { display: block; float: none !important; width: auto; margin: 10px 0 !important; padding: 0 !important; }
  .g-i-ma-carousel {
    .owl-item { float: none !important; display: block; width: auto !important; margin: 10px 0 !important; padding: 0 !important; }
  }
  .as-co-filter {
    li.set { display: block; width: auto; margin: 5px 0; }
  }
  .as-co-list li { margin-top: 5px; margin-bottom: 5px; }
