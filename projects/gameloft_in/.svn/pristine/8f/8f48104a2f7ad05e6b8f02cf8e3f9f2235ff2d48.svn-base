.menu-bar { display: none; position: absolute; top:50%; right: 0; width: 26px; height: 26px; margin: -12px 15px 0 0; cursor: pointer;
  &:before { content: ''; display: block; position: absolute; top: -10%; left: -60%; width: 220%; height: 120%; background: $coWhite; }
  @include transition(all .4s cubic-bezier(.645,.045,.355,1));
  @include transform(translate3d(0,0,0));
  span { z-index: 2; display: block; position: absolute; width: 13px; height: 3px; margin: 4px 0; background: $coGray; @include transition(all 0.3s 0.4s ease);
    &:nth-child(1) { top: 0; left: 0; }
    &:nth-child(2) { top: 0; right: 0; }
    &:nth-child(3) { top: 3px + 4px; left: 0; }
    &:nth-child(4) { top: 3px + 4px; right: 0; }
    &:nth-child(5) { top: 6px + 8px; left: 0; }
    &:nth-child(6) { top: 6px + 8px; right: 0; }
    &:nth-child(1),&:nth-child(3),&:nth-child(5) { @include border-radius(5px 0 0 5px); }
    &:nth-child(2),&:nth-child(4),&:nth-child(6) { @include border-radius(0 5px 5px 0); }
  }
  &.active {
    &.active { @include transform(translate3d(-220px,0,0)); }
    span { background: lighten($coGray, 10%);
      &:nth-child(1) { @include transform(translate3d(2px,2px,0) rotate(45deg)); }
      &:nth-child(2) { @include transform(translate3d(-2px,2px,0) rotate(-45deg)); }
      &:nth-child(3) { opacity: 0; @include transform(translateX(-10px)); }
      &:nth-child(4) { opacity: 0; @include transform(translateX(10px)); }
      &:nth-child(5) { @include transform(translate3d(2px,-2px,0) rotate(-45deg)); }
      &:nth-child(6) { @include transform(translate3d(-2px,-2px,0) rotate(45deg)); }
    }
  }
}

@media only screen and (max-width: 1180px) {
  .fo-to-set {
    &.first { width: 30%; }
    &.links { width: 30%; }
  }
  .nav1 {
    &.owl-carousel { margin-left: 50px; margin-right: 50px; width: auto; }
  }
}
@media only screen and (max-width: 1024px) {
  .co-pa-set {
    &.left { width: 52%; }
    &.right { width: 48%; }
  }
}
@media only screen and (max-width: 950px) {
  .menu li { padding: 0 20px; }
  .footer-top { text-align: center; }
  .fo-to-set { float: none !important; display: inline-block; vertical-align: top;
    &.first { width: 49%; }
    &.links { width: 49%; text-align: left; }
    &.last { margin-top: 30px; }
  }
  .f-t-version { min-width: 0; }
  .fo-bo-copyright { padding: 0;
    br { display: none; }
  }
  .gi-m-col-set { padding: 0 15px; }
  .anim-content > * { @include transition(all 0s ease !important);}
}
@media only screen and (min-width: 811px) {
  .g-i-ma-menu {
    ul { display: block !important; }
  }
}
@media only screen and (max-width: 810px) {
  .menu-bar { display: block; }
  .he-co-right { z-index: 10; position: fixed; top:0; right: 0; width: 220px; height: 100%; background: $coGray; @include transition(all .4s cubic-bezier(.645,.045,.355,1));
    @include transform(translate3d(220px,0,0));
    &.active { @include transform(translate3d(0,0,0)); }
  }
  .menu { display: block; margin: 0; padding: 10px 0;
    li { display: block; padding: 0;
      a { display: block; padding: 5px 20px; color: $coWhite;
        &:hover, &:active { background: $coLightBlue; color: $coWhite !important; }
      }
      &.acitve {
        a { background: $coLightBlue; color: $coWhite !important; }
      }
    }
  }
  .g-i-ma-top { padding-bottom: 15px; }
  .g-i-ma-menu { width: 50%; max-width: 50%; text-align: left;
    .title { display: block; }
    ul { display: none; position: absolute; top: 100%; left: 0; width: 100%; background: $coWhite; border: 1px solid lighten($coAsh, 15%); border-top: none;
      li { display: block; margin: 0;
        a { padding: 10px 13px;
          &:hover, &:active { background: $coGray; color: $coWhite; }
        }
        &.active {
          a { background: $coGray; color: $coWhite; }
        }
      }
    }
  }
  .g-i-ma-user { max-width: 48%; margin: 0; }
  .g-i-btn { padding: 15px; }
  .fo-bo-louisiana, .fo-bo-copyright { float: none !important; width: auto !important; text-align: center; }
  .co-pa-top { padding: 20px 15px 30px 15px; }
  .as-co-list li { margin-top: 10px; margin-bottom: 10px; }
}
@media only screen and (max-width: 670px) {
  .g-i-main-vid { padding: 20px 15px; }
  .g-i-ma-col { padding: 20px 0; }
  .gi-m-col-set { display: block; float: none !important; width: auto !important; margin: 30px 0 40px 0; padding: 0;
    &.left { margin-top: 0; }
    &.right { margin-bottom: 0; }
  }
  .g-i-ma-carousel .owl-carousel { margin-top: 30px; margin-bottom: 30px; }
  .co-pa-set { float: none !important; width: auto !important; padding: 0 !important;
    &.left { margin-bottom: 30px; }
  }
  .g-i-ma-carousel {
    .owl-carousel { margin-top: 15px; margin-left: 0; margin-right: 0; }
    .owl-stage { width: 100% !important; @include transform(translate3d(0,0,0) !important); }
    .owl-item { width: 50% !important; margin: 5px 0 !important; @include box-sizing(border-box);
      &:nth-child(2n+1) { padding-right: 5px; }
      &:nth-child(2n) { padding-left: 5px; }
    }
  }
}
@media only screen and (max-width: 640px) {
  header.v2 .header-content, header.inner .header-content { padding-top: 10px; padding-bottom: 10px; }
  .footer-content { padding-top: 30px; padding-bottom: 30px; }
  .fo-to-logo img { width: 200px; }
  .fo-bo-louisiana { padding-bottom: 20px; }
  .g-i-main-vid { padding: 15px; }
  .g-i-ma-logo img { width: 300px; }
  .gi-play-cover span { @include transform(scale(0.8)); }
  .gl-in-main { background-size: 140% auto; }
  .g-i-ma-logo { padding: 20px 0; }
  .co-pa-list {
    li { float: left; width: 50%; margin: 5px 0 !important;
      &:nth-child(2n+1) { padding-right: 5px; }
      &:nth-child(2n) { padding-left: 5px; }
    }
  }
  .ra-co-list li { padding: 15px 20px; }
  .as-co-list { padding-top: 20px;
    li { width: 23.8%; margin: 5px 0.7% !important;
      &:nth-child(4n+1) { margin-left: 0 !important; }
      &:nth-child(4n) { margin-right: 0 !important; }
    }
  }
}
@media only screen and (max-width: 560px) {
